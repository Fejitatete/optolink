	<telegram name='PelletVerbrauch' access='r' address='08B0' type='uint' divider='1000'/>
	<telegram name='BoilerPump' access='r' address='0845' type='boolean' />

	<!--# Heizkreis 1 -->
	<telegram name='M1FlowTemperature' access='r' address='2900' type='short' divider='10'/>
