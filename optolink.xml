	<telegram name='HotWaterPump' access='r' address='0846' type='boolean' />

	<!--# Kessel -->
	<telegram name='KesselTemperature' access='r' address='A202' type='short' divider='100'/>
	<telegram name='BrennerPower' access='r' address='A305' type='ubyte' divider='2'/>

	<!-- Brennerstatus ist noch nicht klar Addresse noch gesucht -->
	
	<telegram name='BrennerStatus' access='r' address='0962' type='short' />
