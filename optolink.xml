<?xml version="1.0" encoding="UTF-8"?>
<optolink device="2033" name="300P" protocol="300">

	<tty>/dev/ttyAMA0</tty>
	<ttytimeout>2000</ttytimeout>           <!-- milliseconds for reading timeout tty -->
	<port>12001</port>
	<subscriberPort>12002</subscriberPort>
	<interval>10</interval>                 <!-- Seconds to poll optolink -->

	<!-- Addressen die von diesem "device" unterstÃ¼tzt werden -->

	<telegram name="deviceId" access='r' address="00F8" type="short" />
	<telegram name='SystemTime' access='r' address='088E' type='date' />
	<telegram name='OutsideTemperature' access='r' address='0800' type='short' divider='10'/>
	
	<!--# Puffer-Boiler -->

	<telegram name='HotWaterTemperature' access='r' address='0806' type='short' divider='10'/>
